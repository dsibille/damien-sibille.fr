    <h2>A propos de l'auteur</h2>
</div>

<section class="post-author-body">
    {% if type == 'publisher' %}
    <div itemprop="logo" itemscope itemtype="https://schema.org/ImageObject">    
        <meta itemprop="url" content="{{ asset('img/blog/photo-damien-sibille.jpg') }}">
        <meta itemprop="width" content="83">
        <meta itemprop="height" content="110">
    </div>
    {% endif %}

    <img itemprop="image" src="{{ asset('img/blog/photo-damien-sibille.jpg') }}" height="110" alt="Photo Damien SIBILLE" />
