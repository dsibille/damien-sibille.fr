{% extends "SibilleEcommerceBundle::pagelayout.html.twig" %}

{% block title %}
<article class="page-title">
    
    <section class="title">
        <h1><span class="text-color">{{ ez_field_value(content, 'title') }}</span></h1>
    </section> 

    <!-- .breadcrumbs start -->
    <ul class="breadcrumbs">
        <li>
            vous êtes ici:
        </li>
        <li class="home-icon">
            <a href="/">/</a>
        </li>
        <li class="active">
            <a href="#">{{ ez_field_value(content, 'title') }}</a>
        </li>
    </ul><!-- .breadcrumbs end -->

</article> <!-- .page-title end -->
{% endblock %}

{% block content %}
    
<div class="container_12">

    <!-- .grid_8 start -->
    <ul class="grid_8 blog-posts blog-posts2">

        {# LISTE DES ARTICLES #}
        {% for article in articles %}
        {{ render( controller( 'ez_content:viewLocation', 
            {'locationId': article.contentInfo.mainLocationId, 'viewType': 'line', params: {} } ) ) 
        }}
        {% endfor %}
        
        {# PAGINATION #}
        <li class="pagination clearfix">
            <ul>
                <li class="arrow-prev">
                    <a href="#"></a>
                </li>
                <li class="active">
                    <a href="#">1</a>
                </li>

                <li>
                    <a href="#">2</a>
                </li>

                <li>
                    <a href="#">3</a>
                </li>

                <li>
                    <a href="#">4</a>
                </li>

                <li>
                    <a href="#">5</a>
                </li>

                <!-- arrow left start -->
                <li class="arrow-next">
                    <a href="#"></a>
                </li><!-- arrow left end -->

            </ul>
        </li><!-- .pagination end -->

    </ul><!-- .grid_8 end -->

    <!-- .aside-right start -->
    <aside class="grid_4 aside-right">

        <!-- .widget start -->
        <ul class="aside_widgets">

            <!-- .widget_categories start -->
            <li class="widget widget_categories">
                <div class="title">
                    <h5>Catégories</h5>
                </div>
                <ul>
                    {% for categorie in categories %}
                    <li><a href="">{{ categorie }}</a></li>
                    {% endfor %}
                </ul>  
            </li><!-- .widget_recent_entries end -->

        </ul><!-- .aside_widgets end -->
    </aside><!-- .aside-right end -->

</div><!-- .container_12 end -->
    
{% endblock %}

{% block script %}
    {{ parent() }}
    <script  src="{{ asset('js/jquery.nivo.slider.js') }}"></script><!-- nivo slider -->
    <script  src="{{ asset('js/jplayer/jquery.jplayer.min.js') }}"></script> <!-- prettyPhoto lightbox -->
{% endblock %}
